# Django Settings
DJANGO_SETTINGS_MODULE=collab_portal.production_settings
SECRET_KEY=your-secret-key-here-generate-a-random-string
DEBUG=False

# Database (automatically set by Railway/Heroku if using their PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-app-name.railway.app,your-domain.com

# Optional: Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional: AWS S3 for Media Files
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
